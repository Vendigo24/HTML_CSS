.container
  display flex
  flex-direction column
  justify-content center

header
  display flex
  flex-direction column
  background no-repeat
  width 100%
  min-height 500px


.mainpage
  background-image url("/img/image1.jpg")
  background-size 100%
.article
  background-image url("/img/image4.jpg")
  background-size 100%
.table
  background-color lightslategrey
.menu
  width 100%
  margin 0 auto
  margin-bottom 10px
  border-bottom solid thin white
  padding-bottom 10px
  display flex
  flex-direction row
  justify-content flex-end
  align-items center
  flex-wrap nowrap
  & h2
    width 65%
    margin-left 0.2in
    padding 0
    & a
      color white
    & a:hover
      color white
      background-color lightslategrey
      opacity 0.5
      text-decoration none
  & a
    & img
      margin 0 10px
      width 50px
      height 50px
    & img:hover
      background-color lightslategrey
      opacity 0.5

.welcometext
  display flex
  flex-direction row
  width 100%
  height 100%
  margin auto
  justify-content center
  & p
    text-align center
    font-size 20pt


.gallery
  display flex
  flex-direction row
  width 100%
  justify-content space-evenly
  align-items flex-end
  margin 5px auto
  flex-wrap nowrap
  & a
    & img
      width 75%
      height 75%
  & img
    margin 10px
    width 25%
    height 25%
  & img:hover
    opacity 0.7


div.textonimageacrop
  background-image url("/img/image4.jpg")
  width 100%
  min-height 300px
  align-items center
  justify-content center


p.text
  color white

h3
  align-items center
  width 60%
  text-align center
  justify-content center
  margin 10px auto

p
  font-size 14pt
  text-align justify
  margin 0 10px

span.bold
  font-weight bold

table.places
  margin 10px auto
  & tr
  & th
  & td
    border thin solid black
    padding 5px
    margin 2px
    text-align center

.forms
  width 100%
  background-color lightgrey
  display flex
  flex-direction row
  justify-content space-evenly
  margin 10px auto
  & .button
    margin 10px 0
  & details
    margin 0 10px
  & .sort
    & select
      margin-left 10px
    & .checkbox
      display flex
      flex-direction row
      justify-content center
      & input
        margin 10px


@media (max-width: 600px)
  header
    min-height 300px
  .menu
    width 100%
    & h2
      text-align center
      width 60%
      margin-left 30px
      font-size 14pt
      padding 0
    & a
      & img
        margin-left 40px
  .gallery
    flex-wrap wrap
    justify-content space-evenly
    & img
      margin 10px 0
      width 100%
    & a
      & img
        width 100%
        height 100%
  .welcometext
    & p
      font-size 16pt
  p
    font-size 12pt
  .forms
    flex-direction column
    & details
      margin 10px auto