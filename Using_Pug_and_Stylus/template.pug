block variable
    - var sites = {"CSS" : "CSS.html", "Синтаксис CSS" : "csssyntax.html", "Вставка CSS" : "#", "CSS текст" : "#","CSS шрифт" : "cssfont.html", "Блоки" : "#"}

mixin CreateMenu(values = {'' : ''}, active = 'something')
    each key, value in values
        if value == active
            a.active(href= key)= value
        else
            a(href= key)= value



doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title #{title}
        link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
        link(rel="stylesheet", href="css/main.css")
    body
        div.container
            block header
                header
                    +CreateMenu(sites, title)
            block content
    //- Scripts
    script(src="js/jquery-3.5.1.min.js")
    script(src="js/main.js")